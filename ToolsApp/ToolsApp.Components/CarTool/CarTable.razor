@using ToolsApp.Core.Interfaces.Models

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Make</th>
      <th>Model</th>
      <th>Year</th>
      <th>Color</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var car in Cars)
    {
      <CarViewRow Car="@car" OnDeleteCar="@OnDeleteCar" />
    }
  </tbody>
</table>

@code {
  [Parameter]
  public IEnumerable<ICar> Cars { get; set; } = new List<ICar>();

  [Parameter]
  public EventCallback<int> OnDeleteCar { get; set; }
}